# Main modifier key (must be defined first)
set $mod Mod4

# Workspace configuration (defines $refresh_i3status and $ws variables - must be first)
include ~/.config/i3/workspaces.conf

# Font
include ~/.config/i3/appearance.conf

# Basic autostart (dex, xss-lock, nm-applet)
include ~/.config/i3/autostart_basic.conf

# Audio controls (needs $refresh_i3status from workspaces.conf)
include ~/.config/i3/audio.conf

# Window management (floating_modifier, tiling_drag)
include ~/.config/i3/window_management.conf

# General keyboard shortcuts
include ~/.config/i3/keybindings.conf

# Resize mode
include ~/.config/i3/resize_mode.conf

# Additional autostart (setxkbmap, feh, polybar)
include ~/.config/i3/autostart_additional.conf

# Screenshot shortcuts
include ~/.config/i3/screenshots.conf

# Scratchpad configuration
include ~/.config/i3/scratchpads.conf

# Picom and colors (must be last)
include ~/.config/i3/appearance_colors.conf
